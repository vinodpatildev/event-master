<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cdSectionWise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/test_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/results"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Section Name"
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/section_total_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Total Questions"
                android:textColor="#000"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/section_name" />

            <TextView
                android:id="@+id/correctSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="Correct"
                android:textColor="#45F248"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/section_total_questions" />

            <TextView
                android:id="@+id/incorrectSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="Incorrect"
                android:textColor="#FF9494 "
                app:layout_constraintLeft_toRightOf="@id/correctSection"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section_total_questions" />

            <TextView
                android:id="@+id/positive_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="Positive Marks"
                android:textColor="#45F248"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/correctSection" />

            <TextView
                android:id="@+id/negative_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Negative Marks"
                android:textColor="#FF9494 "
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintLeft_toRightOf="@id/positive_score"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/incorrectSection" />

            <TextView
                android:id="@+id/total_section_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:text="Total obtained score"
                android:textColor="#000 "

                app:layout_constraintHorizontal_bias="0.019"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/negative_score"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/total_section_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:text="Total Time spend"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.019"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_section_Score"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="4dp"
        android:background="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cdSectionWise" />

</androidx.constraintlayout.widget.ConstraintLayout>