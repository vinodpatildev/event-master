<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/test_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/results"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ques_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Ques No."
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ques_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Ques Type"
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/ques_no" />

            <TextView
                android:id="@+id/time_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Time Taken"
                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@id/ques_type"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ques_no" />

            <TextView
                android:id="@+id/correct_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="Correct Answer"
                android:textColor="#45F248"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/ques_type" />


            <TextView
                android:id="@+id/your_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:text="Your Answer"
                android:textColor="#FF9494 "
                app:layout_constraintHorizontal_bias="0.421"
                app:layout_constraintLeft_toRightOf="@id/correct_answer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ques_type" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="Status"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/test_image"
                app:layout_constraintTop_toBottomOf="@id/correct_answer" />

            <ImageView
                android:id="@+id/tick"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/check_mark"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintLeft_toRightOf="@id/status"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/your_answer" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/wrong_tick"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cross"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintLeft_toRightOf="@id/status"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/your_answer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>