<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".presentation.ui.event.details.EventDetailsActivity">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_happy_place_ll_marginStart"
    android:layout_marginEnd="@dimen/item_happy_place_cv_main_marginStartEnd"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/item_happy_place_cv_corner_radius"
    app:cardElevation="@dimen/item_happy_place_cv_elevation"
    app:cardUseCompatPadding="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/item_happy_places_content_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_happy_place_ll_marginStart"
            android:layout_marginEnd="@dimen/item_happy_place_ll_marginEnd"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivEventPicture"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/placeholder_image"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvEventFieldName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvEventFieldNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="@color/item_happy_place_description_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvEventFieldDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Event Date"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvEventFieldDateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/2022"
                    android:textColor="@color/item_happy_place_description_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvEventFieldOrganizerDepartment"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvEventFieldOrganizerDepartmentValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Organizer Department"
                    android:textColor="@color/item_happy_place_description_text_color"
                    android:textSize="@dimen/item_happy_place_description_textSize"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvEventFieldOrganizer"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Organizer"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvEventFieldOrganizerValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Organizer"
                    android:textColor="@color/item_happy_place_description_text_color"
                    android:textSize="@dimen/item_happy_place_description_textSize"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvEventFieldDetails"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_happy_place_title_textSize"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvEventFieldDetailsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textColor="@color/item_happy_place_description_text_color"
                    android:textSize="@dimen/item_happy_place_description_textSize"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_happy_place_ll_marginStart"
            android:layout_marginEnd="@dimen/item_happy_place_ll_marginEnd"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/btnRegisterForEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/item_happy_place_ll_marginEnd"
                android:text="Register"
                />
            <Button
                android:id="@+id/btnShareEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/item_happy_place_ll_marginStart"
                android:text="Share"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>